{
  "name": "business-trip",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/postgres": "^2.0.5",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "express": "^4",
    "fs": "^0.0.1-security",
    "mime-types": "^3.0.1",
    "sqlite": "^5.1.1"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.13.0",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": ">=8",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-employee": "cds watch --open at.clouddna.employee/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/employee"
  ],
  "cds": {
    "requires": {
      "[production]": {
        "db": {
          "kind": "postgres",
          "impl": "@cap-js/postgres"
        },
        "auth": "xsuaa"
      },
      "[development]": {
        "db": {
          "kind": "sqlite",
          "model": [
            "db/schema"
          ]
        },
        "auth": {
          "kind": "dummy"
        }
      },
      "service": {
        "impl": "./srv/service.js"
      }
    }
  }
}
